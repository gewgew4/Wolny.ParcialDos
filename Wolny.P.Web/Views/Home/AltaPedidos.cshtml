@model Wolny.P.Web.Models.PedidoModel

@{
    ViewData["Title"] = "AltaPedidos";
}

<h1>Alta Pedidos</h1>


<h4>PedidoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AltaPedidos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Entregado" /> @Html.DisplayNameFor(model => model.Entregado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad.Id">Ciudad</label>
                <select asp-for="Ciudad.Id" class="form-control">
                    @foreach (var ciudad in ViewBag.Ciudades)
                    {
                        <option value="@ciudad.Id">@ciudad.Nombre</option>
                    }
                </select>
                <span asp-validation-for="Ciudad.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

